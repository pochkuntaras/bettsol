- if answer.persisted?
  .answer(class="#{'answer_best' if answer.best?}")
    %p(id="content_answer_#{answer.id}")
      = answer.content
    .answer__attachments
      = render answer.attachments
    - if current_user && current_user.is_author?(answer)
      = form_for answer, remote: true, html: { class: 'form', style: 'display: none;' } do |f|
        .form__field
          = f.label :content
          = f.text_area :content, id: nil, class: 'form__input'
        .actions
          = f.submit 'Update', class: 'button button_green'
    = render partial: 'answers/actions', locals: { answer: answer }
