(function() {
    <% if @answer.errors.present? %>
        $('form#edit_answer_<%= @answer.id %> textarea').after('<%= j render partial: 'layouts/errors', locals: { errors: @answer.errors }%>');
    <% else %>
        $('#content_answer_<%= @answer.id %>').html('<%= j @answer.content %>').siblings('form').fadeOut;
    <% end %>
})();
