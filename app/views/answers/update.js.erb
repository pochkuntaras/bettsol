(function() {
    <% if @answer.errors.present? %>
        $('form#edit_answer_<%= @answer.id %>').replaceWith('<%= j render partial: 'answers/edit_form', locals: { answer: @answer } %>');
        $('form#edit_answer_<%= @answer.id %>').show();
    <% else %>
        $('#answer_<%= @answer.id %>').replaceWith('<%= j render @answer %>');
    <% end %>
})();
