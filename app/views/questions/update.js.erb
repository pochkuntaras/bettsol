<%= render 'layouts/notifications' %>

(function() {
    <% if @question.errors.present? %>
        $('form#edit_question_<%= @question.id %>').replaceWith('<%= j render 'questions/edit_form' %>');
        $('form#edit_question_<%= @question.id %>').show();
    <% else %>
        $('#question_<%= @question.id %>').replaceWith('<%= j render @question %>');
    <% end %>
})();
